
<% layout("/layouts/boilerplate") -%> 
<style>
  #fillter{
    display: flex;
    flex-wrap: wrap;
  }
  .fillter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .fillter:hover{ 
    opacity: 1;
    cursor: pointer;
    color: aliceblue;
    
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
    margin-left: 3rem;
    margin-top: 1rem;
    display: flex;
    align-items: center;
    background-color: rgb(22, 22, 95);
    color: #fff;

  }
  
  @media (min-width: 1024px) and (max-width: 1502px) {
    #fillter {
      justify-content: flex-start; /* Align items to the left */
      flex-wrap: wrap; /* Allow wrapping */
      gap: 1.5rem; /* Add spacing between items */
    }

    .tax-toggle {
      height: 3rem;
      padding: 0.8rem 1rem;
      margin: 1rem;
      font-size: 1rem; /* Adjust text size */
      flex: 1;
      max-width: 50%; /* Limit button width */
      text-align: center;
      justify-content: center;
    }

    .fillter {
      margin-right: 1rem;
      margin-top: 1rem;
    }

    .fillter p {
      font-size: 1rem;
    }

    .fillter svg {
      width: 22px;
      height: 22px;
    }
  }

 
  @media (max-width: 1024px) {
    #fillter {
      justify-content: center;
    }

    .tax-toggle {
      height: 3rem;
      padding: 0.8rem;
      margin: 1rem;
      font-size: 0.9rem;
      flex: 1;
      max-width: 80%; /* Adjust button size */
      text-align: center;
      justify-content: center;
    }

    .fillter {
      margin: 0.5rem 1rem;
    }

    .fillter p {
      font-size: 0.9rem;
    }

    .fillter svg {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 768px) {
    .tax-toggle {
      height: 2.5rem;
      padding: 0.6rem;
      font-size: 0.8rem;
      margin: 0.5rem;
      flex: 1;
      max-width: 90%;
      text-align: center;
    }

    .fillter {
      margin: 0.5rem;
    }

    .fillter p {
      font-size: 0.8rem;
    }

    .fillter svg {
      width: 18px;
      height: 18px;
    }
  }

  @media (max-width: 480px) {
    .tax-toggle {
      height: 2.2rem;
      padding: 0.4rem;
      font-size: 0.7rem;
      margin: 0.3rem;
      flex: 1;
      text-align: center;
    }

    .fillter {
      margin: 0.3rem;
    }

    .fillter p {
      font-size: 0.7rem;
    }

    .fillter svg {
      width: 16px;
      height: 16px;
    }
  }
  
</style>
